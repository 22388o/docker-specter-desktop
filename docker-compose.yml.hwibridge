version: '3.8'
services:
    specterhwi:
        image: registry.gitlab.com/lncm/docker/spector-desktop:v1.0.0-b56b17f4
        container_name: specter-desktop
        network_mode: host
        ports:
            - "25441:25441"
        restart: on-failure
        stop_grace_period: 5m30s
        privileged: true
        command: --hwibridge
        volumes:
            - "${PWD}/data:/data/.specter"
            - "/dev:/dev"
            - "/etc/udev:/etc/udev"
